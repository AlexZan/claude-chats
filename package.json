{
  "name": "claude-chats",
  "displayName": "Claude Chats",
  "description": "Organize, rename, and archive your Claude Code conversations",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "author": {
    "name": "Alexander Zanfir"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/claude-chats"
  },
  "bugs": {
    "url": "https://github.com/yourusername/claude-chats/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "conversation",
    "chat",
    "archive",
    "organize",
    "manager",
    "ai",
    "assistant"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.svg",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeCodeConversationManager.renameCurrentConversation",
        "title": "Claude Code: Rename Current Conversation"
      },
      {
        "command": "claudeCodeConversationManager.archiveCurrentConversation",
        "title": "Claude Code: Archive Current Conversation"
      },
      {
        "command": "claudeCodeConversationManager.showConversationManager",
        "title": "Claude Code: Show Conversation Manager"
      },
      {
        "command": "claudeCodeConversationManager.refreshConversations",
        "title": "Claude Code: Refresh Conversations",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeCodeConversationManager.renameConversation",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "claudeCodeConversationManager.archiveConversation",
        "title": "Archive",
        "icon": "$(archive)"
      },
      {
        "command": "claudeCodeConversationManager.restoreConversation",
        "title": "Restore",
        "icon": "$(discard)"
      },
      {
        "command": "claudeCodeConversationManager.deleteConversation",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "claudeCodeConversationManager.toggleDone",
        "title": "Toggle Done",
        "icon": "$(check)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudeCodeConversations",
          "title": "Claude Conversations",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "claudeCodeConversations": [
        {
          "id": "claudeCodeConversationTree",
          "name": "Conversations"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claudeCodeConversationManager.refreshConversations",
          "when": "view == claudeCodeConversationTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claudeCodeConversationManager.renameConversation",
          "when": "view == claudeCodeConversationTree && viewItem == conversation",
          "group": "inline@1"
        },
        {
          "command": "claudeCodeConversationManager.toggleDone",
          "when": "view == claudeCodeConversationTree && viewItem == conversation",
          "group": "inline@2"
        },
        {
          "command": "claudeCodeConversationManager.archiveConversation",
          "when": "view == claudeCodeConversationTree && viewItem == conversation",
          "group": "inline@3"
        },
        {
          "command": "claudeCodeConversationManager.toggleDone",
          "when": "view == claudeCodeConversationTree && viewItem == conversation",
          "group": "1_actions@1"
        },
        {
          "command": "claudeCodeConversationManager.archiveConversation",
          "when": "view == claudeCodeConversationTree && viewItem == conversation",
          "group": "1_actions@2"
        },
        {
          "command": "claudeCodeConversationManager.deleteConversation",
          "when": "view == claudeCodeConversationTree && viewItem == conversation",
          "group": "2_danger@1"
        },
        {
          "command": "claudeCodeConversationManager.restoreConversation",
          "when": "view == claudeCodeConversationTree && viewItem == archivedConversation",
          "group": "1_actions@1"
        }
      ]
    },
    "configuration": {
      "title": "Claude Chats",
      "properties": {
        "claudeChats.archiveLocation": {
          "type": "string",
          "default": "~/.claude/projects/_archive",
          "description": "Location for archived conversations"
        },
        "claudeChats.createBackups": {
          "type": "boolean",
          "default": true,
          "description": "Create backup files before modifying conversations"
        },
        "claudeChats.confirmArchive": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before archiving"
        },
        "claudeChats.showArchivedInTree": {
          "type": "boolean",
          "default": true,
          "description": "Show archived conversations in the tree view"
        },
        "claudeChats.groupBy": {
          "type": "string",
          "enum": [
            "project",
            "date"
          ],
          "default": "project",
          "description": "How to group conversations in the tree view"
        },
        "claudeChats.showEmptyConversations": {
          "type": "boolean",
          "default": false,
          "description": "Show conversations that only contain warmup/sidechain messages (no actual user content)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0"
  }
}
